[Unit]
Description=Vitrasa Bus Stop API
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/opt/vitrasa-api
Environment=PATH=/opt/vitrasa-api/venv/bin
ExecStart=/opt/vitrasa-api/venv/bin/gunicorn --config gunicorn.conf.py app:app
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
